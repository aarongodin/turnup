{
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["jest", "flowtype"],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "arrow-spacing": 2,
    "block-spacing": 2,
    "brace-style": [2, "1tbs", {
      "allowSingleLine": true
    }],
    "comma-style": 2,
    "curly": 2,
    "eqeqeq": 0,
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],
    "eol-last": 2,
    "indent": ["error", 2],
    "keyword-spacing": [2, {
      "before": true,
      "after": true
    }],
    "no-alert": 2,
    "no-cond-assign": 2,
    "no-confusing-arrow": 2,
    "no-console": 0,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-empty": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unreachable": 2,
    "no-unused-vars": 2,
    "no-useless-constructor": 2,
    "no-var": 2,
    "no-undef": 2,
    "one-var": [2, "never"],
    "semi": [2, "never"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "space-infix-ops": [2, {
      "int32Hint": true
    }]
  }
}
